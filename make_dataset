#!/bin/bash
now=`date +%b%d`
local_dir=`pwd`
data_dir=Data
prep_file=prepare_data.Rmd

# Backup existing dataset
if [ -f .RData ]; then
  cp .RData .RData~
fi

echo "Preparing dataset..."
mkdir -p $data_dir/Code
cp $prep_file $data_dir
cd $data_dir && crmd $prep_file && mv ${prep_file%.*}.* Code/ && cp .RData $local_dir
